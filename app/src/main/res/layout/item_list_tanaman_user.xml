<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/image_foto_tanaman_user"
            android:layout_width="95dp"
            android:layout_height="95dp"
            android:layout_marginRight="8dp"
            android:src="@drawable/logo"
            />
        <TextView
            android:id="@+id/textv_nama_tanaman_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:textStyle="bold"
            android:text="Test test coba tanaman nama tanaman"
            android:layout_marginRight="75dp"
            android:layout_gravity="center_vertical"
            />
    </LinearLayout>
    <Button
            android:id="@+id/button_tanam_tanaman_user"
            android:layout_width="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_height="25dp"
            android:text="+ Tanam"
            android:textColor="@color/colorPrimaryDark"
            android:background="@drawable/button_shape_transparent"

            android:visibility="invisible"
            style="?android:attr/buttonStyleSmall"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true" />
    <Button
        android:id="@+id/button_hapus_tanaman_user"
        android:layout_width="wrap_content"
        android:layout_marginRight="5dp"
        android:layout_height="25dp"
        android:text="Ditanam"
        android:visibility="invisible"
        android:background="@drawable/button_shape"
        android:textColor="@color/white"
        style="?android:attr/buttonStyleSmall"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        />
</RelativeLayout>