<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="id.overgrowth.LoginActivity">
    <ImageView
        android:id="@+id/maskot_plant_login"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:src="@drawable/lorax"
        />

    <TextView
        android:id="@+id/text_slogan_login"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/maskot_plant_login"
        android:text="@string/text_slogan"
        android:layout_marginBottom="10dp"
        />

    <ImageView
        android:id="@+id/logo_overgrowth_login"
        android:src="@drawable/logo_hijau"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/text_slogan_login"
        />
    <com.google.android.gms.common.SignInButton
        android:id="@+id/button_sign_in_googleplus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_alignParentBottom="true"
        />
</RelativeLayout>
