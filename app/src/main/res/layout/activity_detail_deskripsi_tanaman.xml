<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="id.overgrowth.DetailDeskripsiTanamanActivity">
    <include layout="@layout/toolbar"/>
    <TextView
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:id="@+id/text_deskripsi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_deskripsitanaman"
        android:textColor="@android:color/holo_green_light"
        android:textSize="15dp"
        />
            <TextView
                android:id="@+id/textv_deskripsi_tanaman_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                />
    <TextView
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:id="@+id/text_cara_menanam"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_caramenanam"
        android:textColor="@android:color/holo_green_light"
        android:textSize="15dp"
        />
            <TextView
                android:id="@+id/textv_cara_menanam_detail"
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
</LinearLayout>
