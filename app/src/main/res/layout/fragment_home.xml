<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="id.overgrowth.HomeFragment">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/image_maskot_plant"
            android:src="@drawable/lorax"
            android:layout_width="350dp"
            android:layout_height="300dp"
            android:layout_marginTop="50dp"
            android:layout_centerHorizontal="true"
            />
        <TextView
            android:id="@+id/textv_awal"
            android:text="@string/text_awal"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:layout_below="@id/image_maskot_plant"
            android:paddingRight="80dp"
            android:paddingLeft="80dp"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/button_mulai"
            android:layout_below="@id/textv_awal"
            android:layout_centerHorizontal="true"
            android:background="@color/colorPrimary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="60dp"
            android:paddingRight="60dp"
            android:text="@string/text_mulai"
            android:textColor="@color/white"
            />
    </RelativeLayout>

</FrameLayout>
